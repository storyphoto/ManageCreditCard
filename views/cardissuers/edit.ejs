<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/nav %>

    <div class="container contact contact-edit">
      <div class="contact-menu">
        <a class="btn btn-default" href="/cardissuers/<%= Cardissuer._id %>">Back</a>
      </div>
      <h2>Edit</h2>
      <form class="contact-form" action="/cardissuers/<%= Cardissuer._id %>?_method=put" method="post">
        <div class="form-group">
          <label for="issuer">Card Issuers</label>
          <input class="form-control" type="text" id="issuer" name="issuer" value="<%= Cardissuer.issuer %>">
        </div>
        <div class="form-group">
          <label for="amount">Amount</label>
          <input class="form-control" type="text" id="amount" name="amount" value="<%= Cardissuer.amount %>">
        </div>
        <div class="form-group">
          <label for="period">Period</label>
          <input class="form-control" type="text" id="period" name="period" value="<%= Cardissuer.period %>">
        </div>
        <div>
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
      </div>
    </form>
  </body>
</html>
